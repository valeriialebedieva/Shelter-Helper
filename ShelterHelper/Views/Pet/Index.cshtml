@model List<ShelterHelper.Models.Pet>

@{
    ViewData["Title"] = "Available Pets";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-3">üêæ Available Pets for Adoption</h1>
            <p class="text-muted">Browse our wonderful pets looking for their forever homes</p>
        </div>
        <div class="col-md-4 text-md-end">
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Pet" asp-action="Create" class="btn btn-primary">
                    <span class="me-2">‚ûï</span>Add New Pet
                </a>
            }
        </div>
    </div>

    <!-- Search Bar -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-controller="Pet" asp-action="Index" method="get" class="input-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by pet name..." 
                       value="@ViewBag.CurrentFilter" aria-label="Search pets by name">
                <button class="btn btn-outline-primary" type="submit" aria-label="Search">
                    <span>üîç</span>
                </button>
            </form>
        </div>
    </div>

    <!-- Pets Grid -->
    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var pet in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Pet Image -->
                        @if (!string.IsNullOrEmpty(pet.ImagePath))
                        {
                            <img src="@pet.ImagePath" class="card-img-top" alt="@pet.Name" 
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                 style="height: 250px; color: white; font-size: 48px;">
                                üêæ
                            </div>
                        }

                        <!-- Card Body -->
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@pet.Name</h5>
                            <p class="card-text text-muted mb-2">
                                <span class="badge bg-info">@pet.Species</span>
                                @if (!string.IsNullOrEmpty(pet.Breed))
                                {
                                    <span class="badge bg-secondary">@pet.Breed</span>
                                }
                            </p>

                            @if (pet.Age > 0)
                            {
                                <p class="card-text small">
                                    <strong>Age:</strong> @pet.Age year@(pet.Age != 1 ? "s" : "")
                                </p>
                            }

                            @if (!string.IsNullOrEmpty(pet.Notes))
                            {
                                <p class="card-text small text-muted">
                                    @pet.Notes
                                </p>
                            }

                            @if (pet.IsAdopted)
                            {
                                <div class="alert alert-warning mb-2" role="alert">
                                    <small>‚úì Already Adopted</small>
                                </div>
                            }
                        </div>

                        <!-- Card Footer with Actions -->
                        <div class="card-footer bg-light">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <div class="btn-group w-100" role="group" aria-label="Pet actions">
                                    <a asp-controller="Pet" asp-action="Edit" asp-route-id="@pet.Id" 
                                       class="btn btn-sm btn-outline-primary" title="Edit pet">
                                        ‚úèÔ∏è Edit
                                    </a>
                                    <a asp-controller="Pet" asp-action="Delete" asp-route-id="@pet.Id" 
                                       class="btn btn-sm btn-outline-danger" title="Delete pet">
                                        üóëÔ∏è Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted small mb-0">
                                    <a asp-controller="Account" asp-action="Login" class="text-decoration-none">
                                        Sign in to manage pets
                                    </a>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5" role="alert">
            <h5 class="mb-3">No pets found</h5>
            <p class="mb-3">There are currently no pets matching your search.</p>
            <a asp-controller="Pet" asp-action="Create" class="btn btn-primary">
                Add First Pet
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scroll behavior for better UX
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        target.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });
        });
    </script>
}