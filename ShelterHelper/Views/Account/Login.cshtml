@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üîê ShelterHelper Staff Login</h5>
                </div>
                <div class="card-body p-4">
                    <!-- Info Alert -->
                    <div class="alert alert-info" role="alert">
                        <small>
                            <strong>Demo Mode:</strong> Use any username and password (min 6 chars) to log in.
                            Use "admin" as username for admin features.
                        </small>
                    </div>

                    <!-- Validation Errors -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <div asp-validation-summary="All"></div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Login Form -->
                    <form method="post" asp-action="Login">
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username <span class="text-danger">*</span></label>
                            <input type="text" name="username" id="username" class="form-control" 
                                   placeholder="Enter your username" required autofocus>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label for="password" class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" name="password" id="password" class="form-control" 
                                   placeholder="Enter your password" required minlength="6">
                            <small class="text-muted d-block mt-1">Minimum 6 characters</small>
                        </div>

                        <!-- Return URL (hidden) -->
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl">

                        <!-- Sign In Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <span class="me-2">‚Üí</span>Sign In
                        </button>
                    </form>

                    <!-- Divider -->
                    <hr class="my-4">

                    <!-- Back to Home -->
                    <div class="text-center">
                        <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                            ‚Üê Back to Home
                        </a>
                    </div>
                </div>
            </div>

            <!-- Security Notice -->
            <div class="alert alert-warning mt-4" role="alert">
                <small>
                    <strong>üîí Security Notice:</strong> This is a demo application. In production, implement proper password hashing,
                    database validation, and two-factor authentication.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Focus on username field on load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('username').focus();
        });
    </script>
}